@page
@model CatForum.Areas.Identity.Pages.Account.ManageProfileModel
@{
    ViewData["Title"] = "Manage Profile";
}

<h2>Manage Profile</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label">Full Name</label>
        <input asp-for="Input.Name" class="form-control" required />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Location" class="form-label">Location</label>
        <input asp-for="Input.Location" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.ImageFile" class="form-label">Profile Picture</label>
        <input type="file" asp-for="Input.ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
