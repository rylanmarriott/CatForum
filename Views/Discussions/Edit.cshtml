@model CatForum.Models.Discussion

@{
    ViewData["Title"] = "Edit Discussion";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="DiscussionId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Content</label>
            <textarea asp-for="Content" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Current Image</label>
            @if (!string.IsNullOrEmpty(Model.ImageFilename))
            {
                <div>
                    <img src="~/uploads/@Model.ImageFilename" class="img-thumbnail" width="200" />
                </div>
            }
            else
            {
                <p>No image uploaded.</p>
            }
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">Upload New Image (Optional)</label>
            <input type="file" asp-for="ImageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
